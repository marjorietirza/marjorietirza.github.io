---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="wrapper">
<div class="content">
<section style="background-image: linear-gradient(89.61deg, #1F2937 0.28%, rgba(31, 41, 55, 0.1) 99.66%), url('{{ thumbnail | safe }}'); background-repeat: no-repeat; background-size: cover;" class="bg-gray-800 rounded-lg">
  <div
    id="hero"
    class="px-6 pt-16 pb-4 mx-auto max-w-5xl sm:px-4 md:px-12 lg:px-8 lg:pt-20 lg:pb-16"
  >
    <div class="flex flex-col w-full mb-8 text-left">
      <h1
        class="max-w-5xl text-3xl font-semibold leading-none text-white md:text-4xl lg:text-4xl lg:max-w-7xl"
      >
        {{ title }}
      </h1>

      <p
        class="w-full mx-auto text-xl mt-4 text-base leading-relaxed text-left text-white lg:text-2xl lg:pr-40 lg:mt-8"
      >
        {{ client }} â€” {{ year }}
      </p>
      <div
        class="flex flex-wrap justify-start w-full max-w-5xl gap-2 mx-auto mt-6 lg:mt-12"
      >
        {% for tag in tags %}
          {% if tag != "posts" %}
            <span
              class="rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-500 lg:text-sm"
            >
              {{ tag }}
            </span>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<!-- Markdown Content -->
<div class="prose mx-auto mt-12 px-6 lg:px-0">
    {{ content | safe }}
</div>

<nav class="flex flex-wrap justify-between items-center mt-12 max-w-7xl mx-auto px-4 lg:px-0 mb-12 gap-6">
  {% if prevPost %}
    <a href="{{ prevPost.url }}" 
       class="flex items-center gap-4 bg-white rounded-lg shadow-sm border border-black/5 px-6 py-4 text-left transition-transform transform hover:scale-95 w-full sm:w-[48%] lg:w-auto">
      <span class="flex-shrink-0">
        <svg class="w-6 h-6 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </span>
      <div class="max-w-[200px] sm:max-w-[250px] lg:max-w-none">
        <p class="text-xs font-semibold text-gray-500 uppercase">Previous</p>
        <p class="font-medium text-gray-800 truncate lg:whitespace-normal lg:overflow-visible">{{ prevPost.data.title }}</p>
      </div>
    </a>
  {% endif %}

  {% if nextPost %}
    <a href="{{ nextPost.url }}" 
       class="flex items-center gap-4 bg-white rounded-lg shadow-sm border border-black/5 px-6 py-4 text-right transition-transform transform hover:scale-95 w-full sm:w-[48%] lg:w-auto">
      <div class="ml-auto max-w-[200px] sm:max-w-[250px] lg:max-w-none">
        <p class="text-xs font-semibold text-gray-500 uppercase">Next</p>
        <p class="font-medium text-gray-800 truncate lg:whitespace-normal lg:overflow-visible">{{ nextPost.data.title }}</p>
      </div>
      <span class="flex-shrink-0">
        <svg class="w-6 h-6 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </a>
  {% endif %}
</nav>

</div>
</div>






